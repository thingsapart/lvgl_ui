[
  {
    "type": "component",
    "id": "@jog_view",
    "root": {
      "bg_color": "#00ff00",
      "size": [ "100%", "100%" ],
      "children": [ { "type": "label", "text": "TEST", "named": "jog_label_internal" } ]
    }
  },
  {
    "type": "tileview",
    "named": "my_tileview",
    "size": [ "100%", "100%" ],
    "pad_row": 0,
    "pad_column": 0,
    "with": {
      "obj": { "call": "lv_tileview_add_tile", "args": [ "my_tileview", 0, 0, "LV_DIR_RIGHT" ] },
      "do": null
    },
    "with": {
      "obj": { "call": "lv_tileview_add_tile", "args": [ "my_tileview", 0, 1, "LV_DIR_RIGHT" ] },
      "do": {
        "named": "tile_1_content_root",
        "bg_color": "#ff0000",
        "bg_opa": "LV_OPA_COVER",
        "children": [ { "type": "label", "center": [], "text": "Scroll right", "named": "scroll_right_label" } ]
      }
    },
    "with": {
      "obj": { "call": "lv_tileview_add_tile", "args": [ "my_tileview", 1, 0, "LV_DIR_LEFT" ] },
      "do": {
        "named": "tile_2_content_root",
        "children": [
          { "use-view": "@jog_view", "named": "jog_instance" }
        ]
      }
    }
  }
]
