#include "lvgl.h"
#include <stdio.h>
#include <stdlib.h>

extern lv_obj_t* screen1;
lv_obj_t* screen1 = NULL;
extern lv_obj_t* my_label_target;
lv_obj_t* my_label_target = NULL;

void create_ui(lv_obj_t* parent_obj) {
    screen1 = lv_obj_create(parent_obj);
    lv_obj_set_size(screen1, LV_HOR_RES, LV_VER_RES);

    // For node @label1 (named: my_label_target)
    // First 'with'
    my_label_target = lv_label_create(screen1);
    lv_label_set_text(my_label_target, "First With");

    // Second 'with'
    my_label_target = lv_obj_get_child(screen1, 0);
    if (my_label_target != NULL) {
        lv_label_set_long_mode(my_label_target, LV_LABEL_LONG_WRAP);
    }

    // Third 'with'
    my_label_target = lv_btn_create(screen1);
    if (my_label_target != NULL) {
        lv_obj_set_width(my_label_target, 120);
    }
}
