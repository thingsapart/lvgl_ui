    "root": {
      "bg_color": "#00ff00",
      "size": [
        "100%",
        "100%"
      ],
      "children": [
        {
          "type": "label",
          "text": "TEST"
        }
      ]
    }
  },
  {
    "type": "tileview",
    "id": "@main_tileview",
    "add_style": [
      "@container",
      0
    ],
    "size": [
      "100%",
      "100%"
    ],
    "pad_row": 0,
    "pad_column": 0,
    "//": "First WITH (tile1)",
    "with": {
      "obj": {
        "call": "lv_tileview_add_tile",
        "args": [
          0,
          0,
          "LV_DIR_RIGHT"
        ]
      },
      "do": null
    },
    "//": "Second WITH (tile2)",
    "with": {
      "obj": {
        "call": "lv_tileview_add_tile",
        "args": [
          0,
          0,
          "LV_DIR_RIGHT"
        ]
      },
      "do": {
        "//": "Second DO on tile2",
        "add_style": [
          "@container",
          0
        ],
        "bg_color": "#ff0000",
        "bg_opa": "LV_OPA_COVER",
        "children": [
          {
            "type": "label",
            "id": "@label_on_tile2",
            "center": [],
            "text": "Scroll right"
          }
        ]
      }
    },
    "//": "Third WITH (tile3)",
    "with": {
      "obj": {
        "call": "lv_tileview_add_tile",
        "args": [
          1,
          0,
          "LV_DIR_LEFT"
        ]
      },
      "do": {
        "//": "Third DO on tile3",
        "add_style": [
          "@container",
          0
        ],
        "children": [
          {
            "type": "use-view",
            "id": "@jog_view",
            "named": "jog_view_on_tile3"
          }
        ]
      }
    }
  }
